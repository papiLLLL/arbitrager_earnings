<div class="chart-container" style="position: relative; width: 50vw; height: 15vh; margin: 0 auto;">
  <canvas id="jpy_balance"></canvas>
  <canvas id="btc_balance"></canvas>
  <canvas id="btc_price"></canvas>
</div>
<script>
  const ctx1 = document.getElementById("jpy_balance").getContext("2d");
  const jpy_balance = new Chart(ctx1, {
    type: "line",
    data: {
      labels: <%= @created_on.to_json.html_safe %>,
      datasets: [{
        label: "JPY残高",
        data: <%= @total_balance %>,
        borderColor: "rgba(255, 50, 132, 1.0)",
        fill: false,
      }]
    },
  });
</script>

<script>
  const ctx2 = document.getElementById("btc_balance").getContext("2d");
  const btc_balance = new Chart(ctx2, {
    type: "line",
    data: {
      labels: <%= @created_on.to_json.html_safe %>,
      datasets: [{
        label: "BTC残高",
        data: <%= @coincheck_btc_balance %>,
        borderColor: "rgba(255, 50, 132, 1.0)",
        fill: false,
      }]
    },
  });
</script>

<script>
  const ctx3 = document.getElementById("btc_price").getContext("2d");
  const btc_price = new Chart(ctx3, {
    type: "line",
    data: {
      labels: <%= @created_on.to_json.html_safe %>,
      datasets: [{
        label: "BTC価格",
        data: <%= @coincheck_btc_price %>,
        borderColor: "rgba(255, 50, 132, 1.0)",
        fill: false,
      }]
    },
  });
</script>