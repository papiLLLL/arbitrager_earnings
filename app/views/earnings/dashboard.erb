<div class="grid_container">
  <header class="grid_item_header">
    <nav class="flex_container_between">
      <div class="nav_style">
        <p><i class="fas fa-bars fa-2x"></i></p>
      </div>
      <ul class="flex_container_between nav_style">
        <li><span class="far fa-envelope fa-2x"></span></li>
        <li><span>user icon</span></li>
      </ul>
    </nav>
  </header>

  <article class="grid_item_sidebar">
    <div>
      <h1><i class="fab fa-bitcoin"></i> Bosshoot</h1>
    </div>
    <div>
    <ul class="sidebar_list">
      <li><i class="fas fa-home"></i> Dashboard</li>
      <li><i class="fas fa-cog"></i> Setting</li>
    </ul>
  </article>

  <article class="grid_item_list">
    <div class="flex_container_around">
      <section class="list_style">
        <span><i class="fas fa-yen-sign"></i> Total Balance</span>
        <p class="value"><%= @total_balance %></p>
        <span>icon. from last day</span>
      </section>
      <section class="list_style">
        <span><i class="fab fa-btc"></i> BTC Holdings</span>
        <p class="value">0.206</p>
        <span>icon. from last day</span>
      </section>
      <section class="list_style">
        <span><i class="fas fa-yen-sign"></i> Profit(last day)</span>
        <p class="value"><%= @profit %></p>
        <span>icon. from last day</span>
      </section>
      <section class="list_style">
        <span><i class="fas fa-yen-sign"></i> Profit(30 days)</span>
        <p class="value">30000</p>
        <span>icon. from 30 days</span>
      </section>
      <section class="list_style">
        <span><i class="fas fa-percent"></i> Profit rate(last day)</span>
        <p class="value"><%= @profit_rate %></p>
        <span>icon. from last day</span>
      </section>
      <section class="list_style">
        <span><i class="fas fa-percent"></i> Profit rate(30 days)</span>
        <p class="value">1.25</p>
        <span>icon. from 30 days</span>
      </section>
    </div>
  </article>

  <article class="grid_item_graph">
    <section class="flex_container_between border_bottom">
      <h3>JPY Balance</h3>
      <h3>change graph</h3>
    </section>
    <section class="float">
      <div class="graph_size">
        <canvas id="jpy_balance"></canvas>
      </div>
      <div class="graph_item_size">
        <h4>Each Exchange</h4>
        <ul class="clear graph_list border_top">
          <li>Coincheck</li>
          <ul>
            <li>100</li>
          </ul>
          <li>Liguid</li>
          <ul>
            <li>100</li>
          </ul>
          <li>Total Balance</li>
          <ul>
            <li>100</li>
          </ul>
          <li>Total Balance</li>
          <ul>
            <li>100</li>
          </ul>
          <li>Total Balance</li>
          <ul>
            <li>100</li>
          </ul>
        </ul>
      </div>
    </section>
  </article>

  <footer class="grid_item_footer">
    <div class="flex_container_center">
      <p>exchange links</p>
    </div>
  </footer>
</div>